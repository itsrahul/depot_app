<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Orders</h1>


<%= render 'form', order: @orders %>

<% if @orders.blank? %>
<h2>No Order found from <%= @from %> till <%= @to || Time.current %> </h2>
<% else %>
<h3>Order from <%= @from %> to <%= @to  || Time.current %> </h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end  %>
<br>

<%= link_to 'New Order', new_order_path %>
