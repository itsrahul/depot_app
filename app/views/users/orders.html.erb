<p id="notice"><%= notice %></p>

<h1>Order History for <%= current_user.name%></h1>

<%#= render @orders %>
<table>
  <thead>
    <tr>
      <th>Order Id</th>
      <th> Total Amount</th>
      <th align="center">Products</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr align="center">
        <td><%= order.id %></td>
        <td><%= order.total_amount %></td>
        <% order.line_items.each do |line_item| %>
        <td><%= line_item.product.title %> x <%= line_item.quantity %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', users_path %>
